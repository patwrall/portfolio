---
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
    <meta name="description" content="Patrick Rall is a Computer Science student at Purdue University specializing in full-stack development and high-performance computing." />
		<meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
  @font-face{
    font-family:'ABC Marist Unlicensed Trial Book';
    src:url(https://framerusercontent.com/assets/sJ2McoPbw06NGXUxSfUOpiYbDw.woff2);
    font-display:swap
  }
  @font-face{
    font-family:'KaiTi Regular';
    src:url(https://framerusercontent.com/assets/LDFQ24Dh25QxAODVigpxe1MDgg.woff2);
    font-display:swap
  }
  
  /* Basic resets and global styles */
	:root {
		--black-color: rgb(0, 0, 0);
		--white-color: rgb(255, 255, 255);
		--border-color: rgba(225, 228, 232, .8);
	}
	html, body {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
    background-color: var(--white-color);
    color: var(--black-color);
	}
	body {
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}
	*, *::before, *::after {
		box-sizing: border-box;
	}
	h1, h2, h3, h4, h5, h6, p, figure {
		margin: 0;
	}
  a {
    text-decoration: none;
    color: inherit;
  }

  /* Keyframes for the appear animation */
  @keyframes appear {
    from {
      opacity: 0;
      filter: blur(12px);
      transform: translateY(24px);
    }
    to {
      opacity: 1;
      filter: blur(0);
      transform: translateY(0);
    }
  }

  .animate-appear {
    animation: appear 0.5s ease-out forwards;
    opacity: 0; 
  }
</style>
